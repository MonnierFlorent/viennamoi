{% extends 'layout.html.twig' %}
{% set product = true %}
{% block title %}Viennamoi{% endblock %}
{% block content %}
 <main>
  <div class="container-fluid">
   <div class="container">
    <div class="row ">
     <div id="packs" class="col-xs-12 row">
      {% for categorie in categories %}
       <div class="col-xs-12 col-md-4">
        <img src="../web/images/products/{{ categorie.image }}" alt="{{ categorie.name }}">
        <h2>{{ categorie.name }}</h2>
        <p>{{ categorie.content }}</p>
       </div>
      {% endfor %}
     </div>
    </div>
   </div>
  </div>
  <div id="pagepacks" class="container-fluid">
   <div class="container">
    <div class="row">
     <div class="col-12 packcenter">
      <h2>NOS PACKS</h2>
      {% for categorie in categories %}
       <h4>{{categorie.name }}</h4>
       <div class="packleft">			    
        {% for product in products %}
         {% if product.cate == categorie.id %}
          <ul>				
           <li>
            <div class="packformat">{{product.name}}</div> 
            <div class="dborder hidden-xs visible-inline-block"></div>
            <div class="dbordermd visible-md-inline-block hidden"></div>
            <div class="price">{{product.price}} â‚¬</div> 
             <button class="btn btn-danger">
              <a href="#">
               <i class="fa fa-cart-plus" aria-hidden="true"></i>
              </a>
             </button>
            <p class="prodcontent">{{product.content}}</p>
           </li>				
          </ul>
         {% endif %}


        {%endfor%}			    		   
       </div>
      {% endfor %}
     </div>
    </div>
   </div>
  </div>
 </main>
{% endblock %}